<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.example.melodyhacker.bruapp.MainMap" />


    <AutoCompleteTextView
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Places...???"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editTextmap"
        android:layout_width="250dp"
        android:layout_marginTop="10dp"

     />

    <ImageView
        android:layout_width="40dp"
        app:srcCompat="@drawable/seach"
        android:id="@+id/btn_search"
        android:layout_alignBottom="@+id/editTextmap"
        android:layout_toRightOf="@+id/editTextmap"
        android:layout_toEndOf="@+id/editTextmap"
        android:layout_height="40dp"

        />


</RelativeLayout>
